{
  "name": "dobby-api-v2",
  "version": "0.1.0",
  "bin": {
    "dobby-api-v2": "bin/dobby-api-v2.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest test/dobby-api-v2.test.ts test/role-management.test.ts test/companies.test.ts",
    "test:integration": "jest test/role-management.test.ts test/companies.test.ts",
    "test:api": "jest test/api.test.ts",
    "test:performance": "jest test/performance.test.ts",
    "test:security": "jest test/security.test.ts",
    "test:e2e": "ts-node test/e2e/run-e2e-tests.ts",
    "test:e2e:develop": "ts-node test/e2e/run-e2e-tests.ts --env=develop",
    "test:e2e:production": "ts-node test/e2e/run-e2e-tests.ts --env=production",
    "test:e2e:local": "ts-node test/e2e/run-e2e-tests.ts --env=local",
    "test:e2e:api": "jest test/e2e/api-e2e.test.ts",
    "test:e2e:performance": "jest test/e2e/performance-e2e.test.ts",
    "test:e2e:security": "jest test/e2e/security-e2e.test.ts",
    "test:database": "jest test/database/",
    "test:db:start": "docker run -d -p 8000:8000 --name dynamodb-local amazon/dynamodb-local",
    "test:db:stop": "docker stop dynamodb-local && docker rm dynamodb-local",
    "test:db:setup": "node test/database/setup-tables.js",
    "test:db:full": "./test/database/run-db-tests.sh",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=html --coverageReporters=lcov",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "cdk": "cdk",
    "deploy:develop": "cdk deploy --all --context environment=develop --profile dobby_develop",
    "deploy:production": "cdk deploy --all --context environment=production --profile dobby_production",
    "destroy": "cdk destroy --all",
    "destroy:develop": "cdk destroy --all --profile dobby_develop -c environment=develop",
    "destroy:production": "cdk destroy --all --profile dobby_production -c environment=production",
    "bootstrap": "chmod +x scripts/bootstrap.sh && ./scripts/bootstrap.sh"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.524.0",
    "@aws-sdk/client-dynamodb": "^3.724.0",
    "@aws-sdk/client-iot-wireless": "^3.724.0",
    "@aws-sdk/lib-dynamodb": "^3.724.0",
    "@aws-sdk/util-dynamodb": "^3.724.0",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.3",
    "@hono/zod-validator": "^0.4.2",
    "@scalar/hono-api-reference": "^0.5.165",
    "aws-cdk-lib": "2.174.1",
    "constructs": "^10.0.0",
    "hono": "^4.6.16",
    "hono-openapi": "^0.3.1",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.5",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.0",
    "zod": "^3.24.1",
    "zod-openapi": "^4.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/node": "22.7.9",
    "@types/node-fetch": "^2.6.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "aws-cdk": "2.174.1",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  }
}